{
  "name": "@pulsar-framework/design-tokens",
  "version": "0.1.0",
  "description": "Framework-agnostic design tokens for the Pulsar ecosystem",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./tokens": {
      "import": "./dist/tokens/index.js",
      "types": "./dist/tokens/index.d.ts"
    },
    "./art-kit": {
      "import": "./art-kit/index.js",
      "types": "./art-kit/index.d.ts"
    }
  },
  "scripts": {
    "build": "pnpm build:art-kit && tsc",
    "build:art-kit": "tsx build/art-kit-generator.ts",
    "build:css": "tsx build/cli.ts ./dist",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "prepublishOnly": "pnpm build && pnpm build:css"
  },
  "keywords": [
    "pulsar",
    "design-system",
    "design-tokens",
    "css-variables",
    "theming"
  ],
  "devDependencies": {
    "typescript": "^5.9.3",
    "vitest": "^2.1.8"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "author": "Tadeo Piana <https://www.linkedin.com/in/tadeopiana/>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/binaryjack/pulsar-design-system.git"
  },
  "homepage": "https://github.com/binaryjack/pulsar-design-system#readme",
  "bugs": {
    "url": "https://github.com/binaryjack/pulsar-design-system/issues"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
